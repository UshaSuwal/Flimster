<!-- Modal Overlay -->
<div class="flex justify-center items-center z-50">
  <!-- Modal Content -->
  <div class="modal-content bg-gray-900 rounded-lg shadow-lg p-8 max-w-md">
    <!-- Title -->
    <h1 class="text-2xl mb-4 font-bold text-white">Edit Review</h1>

    <!-- Form -->
    <div>
      <%= simple_form_for [@movie, @review], url: movie_review_path(@movie, @review), method: :patch do |f| %>
        <%= f.input :description, label: 'Review', placeholder: 'edit a review...', label_html: {class: 'mt-4 text-white'}, input_html: {class: 'mt-2 w-full bg-gray-800 text-white border border-gray-600 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition duration-300 ease-in-out'} %>
        <%= f.submit 'Update', class: 'text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 mt-4 w-full transition duration-300 ease-in-out focus:outline-none' %>
      <% end %>
    </div>
  </div>
</div>
